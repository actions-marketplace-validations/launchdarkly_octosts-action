{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
